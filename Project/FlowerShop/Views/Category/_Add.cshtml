@model FlowerShop.ViewModels.ViewModelCategory

@using (Html.BeginForm("Add", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="modal-header">
        <button type="button" class="close close-modal">&times;</button>
        <h4 class="modal-title">Add Category</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            @Html.LabelFor(c => c.CategoryName)
            @Html.TextBoxFor(c => c.CategoryName)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Images)
            <input type="file" name="file" multiple />
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" value="Save" class="btn btn-default">Add</button>
        <button type="button" class="btn btn-default close-modal">Close</button>
    </div>
}
