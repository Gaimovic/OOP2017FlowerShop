
@model FlowerShopLibrary.Models.RegisterViewModel


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @*<h4>Create a new account.</h4>
    <hr />*@
    <div class="modal-header">
        <button type="button" class="close close-modal">&times;</button>
        <h4 class="modal-title">Register</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <div class="row">
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-3">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-offset-1 col-md-3">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                </div>
                <div class="col-md-4">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-offset-1 col-md-3">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                </div>
                <div class="col-md-4">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-offset-1 col-md-3">
                    @Html.LabelFor(m => m.Role, new { @class = "col-md-2 control-label" })
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.Role, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn btn-default" value="Register" />
        <button type="button" class="btn btn-default close-modal">Close</button>
    </div>
        }

