@model FlowerShop.ViewModels.ViewModelNews.ViewModelNews

@using (Html.BeginForm("Add", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="modal-header">
    <button type="button" class="close close-modal">&times;</button>
    <h4 class="modal-title">Add</h4>
</div>
<div class="modal-body">
    <div class="form-group">
        <div class="row">
            <div class="col-md-offset-1 col-md-3">
                @Html.LabelFor(n => n.ViewTitle)
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(n => n.ViewTitle)
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-offset-1 col-md-3">
                @Html.LabelFor(n => n.ViewDescription)
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(n => n.ViewDescription)
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-offset-1 col-md-3">
                @Html.LabelFor(n => n.ViewImage)
            </div>
            <div class="col-md-4">
                <input type="file" name="file" />
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <input id="btnUpload" type="submit" value="Submit" />
    <button type="button" class="btn btn-default close-modal">Close</button>
</div>
}