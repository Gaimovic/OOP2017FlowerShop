@model FlowerShop.ViewModels.ViewModelNews.ViewModelNews
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Add</h2>

@using (Html.BeginForm("Add", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table>
        <tr>          
            <th>@Html.LabelFor(n => n.ViewTitle)</th>
            <th>@Html.LabelFor(n => n.ViewDescription)</th>
            <th>@Html.LabelFor(n => n.ViewImage)</th>
        </tr>
        <tr>
            <td>@Html.TextBoxFor(n => n.ViewTitle)</td>
            <td>@Html.TextBoxFor(n => n.ViewDescription)</td>
            <td>        
                    <input type="file" name="file" />
            </td>
        </tr>
    </table>
    <input type="submit" value="Submit" />
}
